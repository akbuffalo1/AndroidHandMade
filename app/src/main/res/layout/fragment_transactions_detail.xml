<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/flContainer_FIH"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivBackground_FIH"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="?attr/favoritesBackground"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/rlInfoHubListItemContainer_FTD"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="?attr/actionBarSize">

            <com.uae.tra_smart_services.customviews.HexagonView
                android:id="@+id/hvIcon_FTD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                app:hexagonSideSize="55dp"
                app:hexagonSrc="@drawable/ic_form"
                app:hexagonBorderSize="1dp"
                app:hexagonBorderColor="?attr/colorPrimary"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="35dp"
                android:layout_marginRight="10dp" />

            <TextView
                android:id="@+id/hvTitle_FTD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:minLines="1"
                android:maxLines="1"
                android:maxEms="10"
                android:singleLine="false"
                android:textColor="?attr/globalButtonTextColor"
                android:textSize="16sp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginTop="15dp"
                android:gravity="start"
                tools:text="Title"
                android:layout_toEndOf="@+id/hvIcon_FTD"
                android:layout_alignTop="@+id/hvIcon_FTD" />

            <TextView
                tools:text="John Doe asdasd asdasda asdasda najsdnasjn jnj nkjnkjqdsn adads akjsdna asdjnaskjdas da sda sd as   asdasdasdasd asdasdasdasd najsdnasjn jnj nkjnkjqdsn adads akjsdna asdjnaskjdas da sda sd as   asdasdasdasd asdasdasdasd asdasda najsdnasjn jnj nkjnkjqdsn adads akjsdna asdjnaskjdas da sda sd as   asdasdasdasd asdasdasdasd asdasdas dasd as d"
                android:layout_gravity="fill"
                android:id="@+id/hvDescr_FTD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:minLines="1"
                android:maxLines="2"
                android:maxEms="12"
                android:singleLine = "false"
                android:width="20dp"
                android:textSize="16sp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_alignParentEnd="true"
                android:gravity="start"
                android:layout_toEndOf="@+id/hvIcon_FTD"
                android:layout_below="@+id/hvTitle_FTD" />

            <View
                android:layout_marginLeft="20dp"
                style="@style/ListViewItemSeparator"
                android:id="@+id/vListViewItemSeparator"
                android:layout_below="@+id/hvIcon_FTD"
                android:layout_alignParentEnd="true" />

            <TextView
                tools:text="John Doe asdasd asdasda asdasda najsdnasjn jnj nkjnkjqdsn adads akjsdna asdjnaskjdas da sda sd as   asdasdasdasd asdasdasdasd najsdnasjn jnj nkjnkjqdsn adads akjsdna asdjnaskjdas da sda sd as   asdasdasdasd asdasdasdasd asdasda najsdnasjn jnj nkjnkjqdsn adads akjsdna asdjnaskjdas da sda sd as   asdasdasdasd asdasdasdasd asdasdas dasd as d"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:layout_below="@+id/vListViewItemSeparator"
                android:layout_alignEnd="@+id/hvDescr_FTD"
                android:id="@+id/tvComplainInformation_FTD" />

            <Button
                android:id="@+id/btnEdit_FTD"
                style="@style/AuthorizationButtons"
                android:paddingStart="55dp"
                android:paddingEnd="55dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fragment_transaction_details_edit_btn"
                android:layout_below="@+id/tvComplainInformation_FTD"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
    </ScrollView>
</FrameLayout>
