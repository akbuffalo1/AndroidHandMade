<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/flContainer_FIH"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivBackground_FIH"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="?attr/favoritesBackground"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/rlInfoHubListItemContainer_FTD"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="?attr/actionBarSize">

            <biz.enon.tra.uae.customviews.HexagonView
                android:id="@+id/hvIcon_FTD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                app:hexagonSideSize="50dp"
                app:hexagonSrc="@drawable/ic_form"
                app:hexagonBorderSize="1dp"
                app:hexagonBorderColor="?attr/colorPrimary"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="35dp"
                android:layout_marginStart="15dp" />

            <TextView
                android:id="@+id/hvTitle_FTD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:minLines="1"
                android:maxLines="2"
                android:maxEms="10"
                android:textColor="?attr/globalButtonTextColor"
                android:textSize="19sp"
                android:paddingEnd="10dp"
                android:layout_marginTop="5dp"
                android:gravity="start"
                tools:text="Title Title Title Title Title Title Title Title Title Title Title Title Title Title Title Title Title Title Title Title Title"
                android:layout_toEndOf="@+id/hvIcon_FTD"
                android:layout_alignTop="@+id/hvIcon_FTD" />

            <TextView
                tools:text="@string/status"
                android:text="@string/status"
                android:id="@+id/tvStatusTitle_FTD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:paddingEnd="5dp"
                android:paddingBottom="2dp"
                android:layout_above="@+id/tvDate_FTD"
                android:layout_alignStart="@+id/hvTitle_FTD" />

            <TextView
                tools:text="Referred To Licensee"
                android:id="@+id/tvStatusValue_FTD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_alignBaseline="@+id/tvStatusTitle_FTD"
                android:layout_alignBottom="@+id/tvStatusTitle_FTD"
                android:layout_toEndOf="@+id/tvStatusTitle_FTD" />

            <TextView
                android:id="@+id/tvDate_FTD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignWithParentIfMissing="true"
                android:gravity="center"
                android:layout_marginBottom="5dp"
                android:text="date"
                android:textSize="14sp"
                android:textColor="@color/hex_color_accent"
                android:layout_alignBottom="@+id/hvIcon_FTD"
                android:layout_alignStart="@+id/tvStatusTitle_FTD" />

            <View
                android:layout_marginLeft="20dp"
                style="@style/ListViewItemSeparator"
                android:id="@+id/vListViewItemSeparator"
                android:layout_below="@+id/hvIcon_FTD"
                android:layout_alignParentEnd="true" />

            <TextView
                tools:text="John Doe asdasd asdasda asdasda najsdnasjn jnj nkjnkjqdsn adads akjsdna asdjnaskjdas da sda sd as   asdasdasdasd asdasdasdasd najsdnasjn jnj nkjnkjqdsn adads akjsdna asdjnaskjdas da sda sd as   asdasdasdasd asdasdasdasd asdasda najsdnasjn jnj nkjnkjqdsn adads akjsdna asdjnaskjdas da sda sd as   asdasdasdasd asdasdasdasd asdasdas dasd as d"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:layout_below="@+id/vListViewItemSeparator"
                android:id="@+id/tvDescription_FTD" />

            <Button
                android:id="@+id/btnEdit_FTD"
                style="@style/AuthorizationButtons"
                android:paddingStart="55dp"
                android:paddingEnd="55dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fragment_transaction_details_edit_btn"
                android:layout_below="@+id/tvDescription_FTD"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
    </ScrollView>
</FrameLayout>
