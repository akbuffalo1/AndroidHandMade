<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    tools:background="?mainBackground"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        app:layout_widthPercent="90%"
        android:layout_height="match_parent">

        <android.support.percent.PercentRelativeLayout
            android:layout_width="match_parent"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_height="wrap_content">

            <Spinner
                android:id="@+id/sInfoSpinner_FCU"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@android:color/transparent"
                tools:listitem="@layout/simple_arrow_spinner_item"/>

            <View
                android:layout_below="@id/sInfoSpinner_FCU"
                android:id="@+id/vInfoDivider_FCU"
                style="@style/AuthorizationFieldsSeparator"/>

            <!--suppress AndroidDomInspection -->
            <com.google.android.gms.maps.MapView
                android:layout_below="@id/vInfoDivider_FCU"
                app:layout_aspectRatio="178%"
                android:id="@+id/mvMap_FCU"
                app:layout_widthPercent="100%"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                tools:background="?colorPrimary"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:layout_below="@id/mvMap_FCU"
                android:textSize="16sp"
                android:id="@+id/tvAddressTitle_FCU"
                android:text="@string/fragment_contact_us_address_label"
                android:textColor="@color/hex_color_asdasddark_gray"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="match_parent"
                android:maxLines="3"
                android:layout_marginBottom="8dp"
                android:textSize="16sp"
                android:paddingStart="12dp"
                android:autoLink="map"
                android:ellipsize="end"
                android:id="@+id/tvAddress_FCU"
                android:textColor="?themeMainColor"
                android:layout_below="@id/tvAddressTitle_FCU"
                tools:text="19 Hamdan Ibn Zayed Al Awwal Street, Al Jimi, AIA meriya, Al Ain"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:layout_below="@id/tvAddress_FCU"
                android:textSize="16sp"
                android:id="@+id/tvContactInfoTitle_FCU"
                android:text="@string/fragment_contact_us_contact_info_label"
                android:textColor="@color/hex_color_asdasddark_gray"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_below="@id/tvContactInfoTitle_FCU"
                android:orientation="vertical"
                android:paddingStart="12dp"
                android:id="@+id/llContactInfoLabels_FCU"
                android:paddingEnd="8dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:maxLines="3"
                    android:textSize="16sp"
                    android:ellipsize="end"
                    android:id="@+id/tvPhoneTitle_FCU"
                    android:textColor="@color/hex_color_middle_gray"
                    android:text="@string/fragment_contact_us_phone_label"
                    android:layout_height="wrap_content"/>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:maxLines="3"
                    android:textSize="16sp"
                    android:ellipsize="end"
                    android:id="@+id/tvMailTitle_FCU"
                    android:textColor="@color/hex_color_middle_gray"
                    android:text="@string/fragment_contact_us_label"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_toEndOf="@id/llContactInfoLabels_FCU"
                android:layout_alignTop="@id/llContactInfoLabels_FCU"
                tools:text="03 784 0654"
                android:id="@+id/tvPhone_FCU"
                android:singleLine="true"
                android:ellipsize="end"
                android:autoLink="phone"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                android:textColor="?themeMainColor"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_toEndOf="@id/llContactInfoLabels_FCU"
                android:layout_below="@id/tvPhone_FCU"
                tools:text="info@radiance_uae.com"
                android:id="@+id/tvEmail_FCU"
                android:singleLine="true"
                android:autoLink="email"
                android:ellipsize="end"
                android:textSize="16sp"
                android:textColor="?themeMainColor"
                android:layout_height="wrap_content"/>

        </android.support.percent.PercentRelativeLayout>

    </ScrollView>

</android.support.percent.PercentFrameLayout>