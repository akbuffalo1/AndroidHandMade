<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rlContainer_IIA"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/fragment_dynamic_service_item_margin"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/fragment_dynamic_service_item_height">

    <TextView
        android:id="@+id/tvDisplayName_IIA"
        tools:text="@string/fragment_edit_user_profile_first_name"
        style="@style/InputItemNameStyle"/>

    <ImageView
        android:id="@+id/ivAttachment_IIA"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/fragment_dynamic_service_item_height"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/tvDisplayName_IIA"
        android:layout_centerVertical="true"
        android:clickable="false"
        android:scaleType="centerInside"
        android:src="@drawable/ic_action_attachment"
        tools:checked="true"/>

    <Space
        android:id="@+id/sSpace_IIA"
        android:layout_width="16dp"
        android:layout_height="@dimen/fragment_dynamic_service_item_height"
        android:layout_below="@id/tvDisplayName_IIA"
        android:layout_toStartOf="@id/ivAttachment_IIA"/>

    <TextView
        android:id="@+id/tvText_IIA"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/fragment_dynamic_service_item_height"
        android:layout_alignParentStart="true"
        android:layout_below="@id/tvDisplayName_IIA"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/sSpace_IIA"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textColor="@color/fragment_dynamic_service_text_color"
        android:textSize="@dimen/sp_settings_static_text_size"
        tools:text="@string/error_fill_all_fields"/>

</RelativeLayout>
