<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hex_authorization_background_color"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/hex_authorization_background_color"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_vertical"
            android:layout_margin="@dimen/abc_action_bar_content_inset_material"
            android:adjustViewBounds="true"
            android:id="@+id/ivLogo_FDC"
            tools:src="@drawable/tra_logo" />

        <LinearLayout
            android:id="@+id/llSignInFields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <View style="@style/AuthorizationFieldsSeparator" />

            <EditText
                android:id="@+id/etDomainAvail_FDCH"
                style="@style/UserAuthorizationDataEditTextField"
                android:hint="@string/str_insert_domain_name_here"
                android:inputType="text" />

            <View style="@style/AuthorizationFieldsSeparator" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llSignInActions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnAvail_FDCH"
                style="@style/BlurButtonStyleSimple"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/str_availabilty" />

            <Button
                android:id="@+id/btnWhoIs_FDCH"
                style="@style/BlurButtonStyleSimple"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/str_who_is" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>