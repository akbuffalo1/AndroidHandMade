<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlInfoHubListItemContainer_FIHLI"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:padding="3dp">

    <Space
        android:layout_width="32dp"
        android:visibility="gone"
        android:id="@+id/sStartOffset_LIIHS"
        android:layout_alignParentStart="true"
        android:layout_height="wrap_content"/>

    <com.uae.tra_smart_services.customviews.HexagonView
        android:id="@+id/hvIcon_LIIHS"
        android:layout_toEndOf="@id/sStartOffset_LIIHS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_gravity="start"
        android:layout_marginBottom="2dp"
        app:hexagonSideSize="40dp"
        app:hexagonSrc="@drawable/ic_form"
        app:hexagonBorderSize="1dp"
        app:hexagonBorderColor="?attr/colorPrimary"/>

    <TextView
        android:id="@+id/hvTitle_LIIHS"
        tools:text="Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:minLines = "1"
        android:maxLines = "1"
        android:singleLine="true"
        android:textColor="?attr/globalButtonTextColor"
        android:textSize="16sp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:gravity="start"
        android:layout_alignTop="@+id/hvIcon_LIIHS"
        android:layout_toStartOf="@+id/hvDate_LIIHS"
        android:layout_toEndOf="@+id/hvIcon_LIIHS"
        />

    <TextView
        android:id="@+id/hvDescr_LIIHS"
        tools:text="John Doe asdasd asdasda asdasdasda najsdnas jn jnj nkjnkjqsd asda najsdnasjn jnj nkjnkjqsda najsdnasjn jnj nkjnkjqdsn adads akjsdna asdjnaskjdas da sda sd as   asdasdasdasd asdasdasdasd najsdnasjn jnj nkjnkjqdsn adads akjsdna asdjnaskjdas da sda sd as   asdasdasdasd asdasdasdasd asdasda najsdnasjn jnj nkjnkjqdsn adads akjsdna asdjnaskjdas da sda sd as   asdasdasdasd asdasdasdasd asdasdas dasd as d"
        android:layout_gravity="fill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:minLines = "1"
        android:maxLines = "3"
        android:width="10dp"
        android:textSize="16sp"
        android:paddingStart="10dp"
        android:layout_above="@+id/vListViewItemSeparator"
        android:paddingEnd="10dp"
        android:layout_alignParentEnd="true"
        android:gravity="start"
        android:layout_toEndOf="@+id/hvIcon_LIIHS"
        android:layout_below="@+id/hvTitle_LIIHS" />

    <TextView
        android:id="@+id/hvDate_LIIHS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="true"
        android:gravity="center"
        android:padding="2dp"
        android:text="date"
        android:textSize="10sp"
        android:textColor="@color/hex_color_accent"
        android:layout_above="@+id/hvDescr_LIIHS"
        android:layout_alignEnd="@+id/hvDescr_LIIHS"
        android:layout_alignTop="@+id/hvIcon_LIIHS" />

    <View
        style="@style/ListViewItemSeparator"
        android:id="@+id/vListViewItemSeparator"
        android:layout_marginStart="5dp"
        android:layout_marginTop="4dp"
        android:layout_alignStart="@+id/hvDescr_LIIHS"
        android:layout_below="@+id/hvIcon_LIIHS"
        android:layout_alignEnd="@+id/hvDescr_LIIHS" />

</RelativeLayout> 