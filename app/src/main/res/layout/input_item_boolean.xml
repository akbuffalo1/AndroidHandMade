<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rlContainer_IIB"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="48dp"
    android:orientation="horizontal"
    tools:background="#999">

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/swSwitch_IIB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:clickable="false"
        tools:checked="true"/>

    <Space
        android:id="@+id/sSpace_IIB"
        android:layout_width="16dp"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/swSwitch_IIB"/>

    <TextView
        android:id="@+id/tvText_IIB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/sSpace_IIB"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/fragment_dynamic_service_text_color"
        android:textSize="@dimen/sp_settings_static_text_size"
        tools:text="@string/error_fill_all_fields"/>

</RelativeLayout>
