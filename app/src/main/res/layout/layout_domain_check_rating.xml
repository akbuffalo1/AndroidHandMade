<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="15dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="CHOSE RATING"
        android:textColor="@color/hex_primary_orange"
        android:textSize="18sp"
        android:id="@+id/textView2" />

    <RadioGroup
        android:id="@+id/rgDomainCheckServiceRating_FDCH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="right|bottom"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true">

        <RadioButton
            android:tag="1"
            android:id="@+id/rbDomainCheckRating_1_FDC"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="35dp"
            android:layout_marginStart="35dp"
            android:layout_weight="1" />

        <RadioButton
            android:tag="3"
            android:id="@+id/rbDomainCheckRating_3_FDC"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="35dp"
            android:layout_marginStart="35dp"
            android:layout_weight="1"/>

        <RadioButton
            android:tag="5"
            android:id="@+id/rbDomainCheckRating_5_FDC"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="35dp"
            android:layout_marginStart="35dp"
            android:layout_weight="1"/>
    </RadioGroup>

</RelativeLayout>