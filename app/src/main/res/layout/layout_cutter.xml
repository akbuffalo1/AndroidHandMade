<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/alMainContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pic_test">

    <ImageView
        android:id="@+id/cutted_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"/>

    <com.uae.tra_smart_services.customviews.CutterContainer
        android:id="@+id/ccContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.uae.tra_smart_services.customviews.HexagonCutterView
            android:id="@+id/hvCutter"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </com.uae.tra_smart_services.customviews.CutterContainer>

    <TextView
        android:id="@+id/doCrop"
        android:gravity="center"
        android:background="#d94a4746"
        android:text="CROP IMAGE"
        android:textColor="@android:color/white"
        android:textSize="26sp"
        android:textAlignment="center"
        android:singleLine="true"
        android:layout_gravity="right|bottom"
        android:padding="15dp"
        android:layout_width="wrap_content"
        android:layout_height="60dp" />

    <com.uae.tra_smart_services.customviews.HexagonView
        android:id="@+id/hvIcon_LIIHA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_gravity="left|bottom"
        app:hexagonSideSize="60dp"
        app:hexagonSrc="@drawable/ic_temp_left_field_icon"
        app:hexagonBorderSize="3dp"
        app:hexagonBorderColor="?attr/colorPrimary"/>

</FrameLayout>