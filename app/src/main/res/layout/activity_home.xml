<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>

    <FrameLayout
        android:id="@+id/flContainer_AH"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_above="@+id/vTabBarSeparator_AH"/>

    <View
        android:id="@+id/vTabBarSeparator_AH"
        android:layout_above="@+id/rgBottomNavRadio_AH"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/activity_home_tab_bar_top_border"/>

    <include
        layout="@layout/layout_bottom_nav_menu"
        android:id="@+id/rgBottomNavRadio_AH"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>