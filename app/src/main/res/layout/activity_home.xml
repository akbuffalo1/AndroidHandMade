<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlGlobalContainer_AH"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/vTabBarSeparator_AH">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"/>

        <FrameLayout
            android:id="@+id/flContainer_AH"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/toolbar"/>
    </RelativeLayout>

    <View
        android:id="@+id/vTabBarSeparator_AH"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/rgBottomNavRadio_AH"
        android:background="@color/activity_home_tab_bar_top_border"/>

    <include
        android:id="@+id/rgBottomNavRadio_AH"
        layout="@layout/layout_bottom_nav_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>