<resources>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:layoutDirection">locale</item>
        <item name="android:textDirection">locale</item>
        <!-- colorAccent is used as the default value for colorControlActivated,
             which is used to tint widgets -->
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="colorAccent">?attr/colorPrimary</item>
        <item name="hexagonHeaderButtonColor">?attr/colorPrimary</item>
        <item name="authorizationTextColors">?attr/colorPrimary</item>
        <item name="authorizationDrawableColors">?attr/colorPrimary</item>
        <item name="themeMainColor">?attr/colorPrimary</item>
        <item name="hexagonHeaderButtonPressedColor">#ff5b61ff</item>
        <item name="addServiceColor">#f68f1e</item>
        <item name="shadowBackgroundColor">#fff5ea</item>
        <item name="dragDeleteColor">#f00</item>
        <item name="toolbarStyle">@style/ToolbarStyle</item>
        <item name="userProfileBackground">@drawable/img_bg</item>
        <item name="mainBackground">@drawable/background_home</item>
        <item name="favoritesBackground">@drawable/favorites_bg</item>
        <item name="reportSpam">@drawable/res_bg_img</item>
        <item name="spamHistory">@drawable/res_bg_img_pol</item>
        <item name="reportSmsTintColor">@color/hex_primary_orange</item>
        <item name="reportWebTintColor">@color/hex_primary_green</item>
        <item name="spamHistoryTintColor">@color/hex_color_dark_gray</item>
        <item name="deleteIcon">@drawable/background_delete</item>
        <item name="sendImeiCodeColor">@color/hex_sendImeiCodeColor_green</item>
        <item name="userAvatarBackground">@color/avatar_background</item>
        <item name="profileControllerCancelColor">#d43f3f</item>
        <item name="profileControllerResetColor">#717d84</item>
        <item name="profileControllerSaveColor">#3cbb4b</item>
        <item name="passwordVisibilityToggleBackground">@drawable/background_user_profile_password_toggle</item>
        <item name="rating_bad_color">@android:color/holo_red_dark</item>
        <item name="rating_neut_color">@android:color/darker_gray</item>
        <item name="rating_good_color">@color/hex_sendImeiCodeColor_green</item>
    </style>

