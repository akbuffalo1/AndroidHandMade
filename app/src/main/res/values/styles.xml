<resources>
    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layoutDirection">locale</item>
    </style>

    <style name="AppThemeOrange" parent="BaseAppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/hex_primary_orange</item>
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/hex_dark_orange</item>
        <item name="android:textColorPrimary">@color/hex_text_color_white</item>

        <item name="homePageHeaderBackground">@color/hex_primary_orange</item>
        <item name="globalButtonTextColor">@color/hex_primary_orange</item>
        <item name="android:layoutDirection">locale</item>
        <!-- colorAccent is used as the default value for colorControlActivated,
             which is used to tint widgets -->
        <item name="colorAccent">@color/hex_color_accent</item>
    </style>

    <style name="AppThemeGreen" parent="BaseAppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/hex_primary_green</item>
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/hex_dark_green</item>
        <item name="android:textColorPrimary">@color/hex_text_color_white</item>

        <item name="homePageHeaderBackground">@color/hex_primary_green</item>
        <item name="globalButtonTextColor">@color/hex_primary_green</item>

        <!-- colorAccent is used as the default value for colorControlActivated,
             which is used to tint widgets -->
        <item name="colorAccent">@color/hex_color_accent</item>
    </style>

    <style name="AppThemeBlue" parent="BaseAppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/hex_primary_blue</item>
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/hex_dark_blue</item>
        <item name="android:textColorPrimary">@color/hex_text_color_white</item>

        <item name="homePageHeaderBackground">@color/hex_primary_blue</item>
        <item name="globalButtonTextColor">@color/hex_primary_blue</item>

        <!-- colorAccent is used as the default value for colorControlActivated,
             which is used to tint widgets -->
        <item name="colorAccent">@color/hex_color_accent</item>
    </style>


    <style name="AppThemeRed" parent="BaseAppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/hex_primary_red</item>
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/hex_dark_red</item>
        <item name="android:textColorPrimary">@color/hex_text_color_white</item>

        <item name="homePageHeaderBackground">@color/hex_primary_red</item>
        <item name="globalButtonTextColor">@color/hex_primary_red</item>

        <!-- colorAccent is used as the default value for colorControlActivated,
             which is used to tint widgets -->
        <item name="colorAccent">@color/hex_color_accent</item>
    </style>

    <style name="AuthorizationFieldsSeparator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_authorization_fields_separator_height</item>
        <item name="android:layout_marginStart">@dimen/dp_authorization_fields_separator_margin</item>
        <item name="android:layout_marginEnd">@dimen/dp_authorization_fields_separator_margin</item>
        <item name="android:background">@color/hex_auth_fields_separator_color</item>
    </style>

    <style name="VerticalFieldsSeparator">
        <item name="android:layout_width">@dimen/dp_authorization_fields_separator_height</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@color/hex_auth_fields_separator_color</item>
    </style>

    <style name="UserAuthorizationDataEditTextField">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">@dimen/dp_transparent_fields_padding</item>
        <item name="android:background">@color/hex_authorization_background_color</item>
        <item name="android:textColor">@drawable/secector_fields_hint_color</item>
        <item name="android:textColorHint">@drawable/secector_fields_hint_color</item>
        <item name="android:drawablePadding">@dimen/dp_edittext_drawable_padding</item>
    </style>

    <style name="UserSettingsStaticText" parent="UserAuthorizationDataEditTextField" >
        <item name="android:textSize">@dimen/sp_settings_static_text_size</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">start|center</item>
    </style>

    <style name="UserSettingsEditableText" parent="UserAuthorizationDataEditTextField" >
        <item name="android:textColor">@color/hex_black_color</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:capitalize">none</item>
        <item name="android:gravity">center|end</item>
    </style>

    <style name="UserSettingsSwitchers" parent="UserAuthorizationDataEditTextField" >
        <item name="android:textColor">@color/hex_black_color</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:capitalize">none</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TransparentWhiteButton">
        <item name="android:background">@drawable/sel_auth_button_background</item>
        <item name="android:textSize">@dimen/sp_authorization_button_text_size</item>
        <item name="android:textColor">?attr/globalButtonTextColor</item>
    </style>

    <style name="BlurButtonStyle" parent="TransparentWhiteButton">
        <item name="android:layout_marginStart">@dimen/dp_button_margin</item>
        <item name="android:layout_marginEnd">@dimen/dp_button_margin</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="BlurButtonStyleSimple" parent="BlurButtonStyle">
        <item name="android:layout_marginStart">150dp</item>
        <item name="android:layout_marginEnd">150dp</item>
    </style>

    <style name="DashboardRadioButton">
        <item name="android:padding">@dimen/dp_dashboard_tab_padding</item>
        <item name="android:drawablePadding">@dimen/dp_dashboard_tab_drawable_padding</item>
        <item name="android:button">@null</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/selector_bottom_nav_radio_text</item>
        <item name="android:background">@drawable/selector_bottom_nav_radio</item>
    </style>

</resources>
